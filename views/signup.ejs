<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">

    <title>Knowledge Base | Signup</title>
    <meta name="description" content="Knowledge Base | Signup">
    <meta name="author" content="Hao Tang">

    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Cambay&display=swap" rel="stylesheet">
    <script src="/js/script.js" defer></script>
</head>

<body>
    <% if (error_msg != '') {%>
    <%- include('partials/error', {msg: error_msg}); %>
    <% } %>
    <div class="container">
        <div id="signup-cover-area">
            <img id="login-logo" src='/img/kb-logo-full.png'>
            <h1>
                <%= signupMsg %>
            </h1>
        </div>
        <div id="signup-more-info-area">
            <div id="signup-more-info-form">
                <form>
                    <input type="text" name="firstname" placeholder="firstname" maxlength="20" required
                        pattern="^[a-zA-Z0-9 ]*$" title="Only letters and numbers are allowed at the moment"
                        onfocus="HideError()">
                    <input type="text" name="lastname" placeholder="lastname" maxlength="20" required
                        pattern="^[a-zA-Z0-9 ]*$" title="Only letters and numbers are allowed at the moment"
                        onfocus="HideError()">
                    <br>
                    <input type="email" name="email" placeholder="email" required onfocus="HideError()">
                    <br>
                    <input type="password" name="password" placeholder="password" maxlength="20" required
                        pattern="^[a-zA-Z0-9 ]*$" title="Only letters and numbers are allowed at the moment"
                        onfocus="HideError()">
                    <br>
                    <input type="password" name="comfirm-pw" placeholder="confirm password" maxlength="20" required
                        pattern="^[a-zA-Z0-9 ]*$" title="Only letters and numbers are allowed at the moment"
                        onfocus="HideError()">
                    <br>
                    <input id="signup-more-info-btn" type="submit" value="signup">
                </form>
            </div>
        </div>
    </div>
</body>

</html>